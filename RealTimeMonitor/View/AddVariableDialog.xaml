<Window
    x:Class="RealTimeMonitor.View.AddVariableDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RealTimeMonitor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddVariableDialog"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  变量名称  -->
        <Label Grid.Row="0" Content="变量名称:" />
        <TextBox
            Grid.Row="1"
            Height="25"
            Margin="0,5,0,10"
            Text="{Binding VariableName, UpdateSourceTrigger=PropertyChanged}" />

        <!--  地址  -->
        <Label Grid.Row="2" Content="地址:" />
        <TextBox
            Grid.Row="3"
            Height="25"
            Margin="0,5,0,10"
            Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />

        <!--  大小  -->
        <Label Grid.Row="4" Content="大小:" />
        <TextBox
            Grid.Row="5"
            Height="25"
            Margin="0,5,0,10"
            Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" />

        <!--  类型  -->
        <Label Grid.Row="6" Content="类型:" />
        <ComboBox
            Grid.Row="7"
            Height="25"
            Margin="0,5,0,10"
            ItemsSource="{Binding Types}"
            SelectedItem="{Binding Type}" />

        <!--  偏移量  -->
        <Label Grid.Row="8" Content="偏移量:" />
        <TextBox
            Grid.Row="9"
            Height="25"
            Margin="0,5,0,10"
            Text="{Binding Offset, UpdateSourceTrigger=PropertyChanged}" />

        <!--  监控状态  -->
        <CheckBox
            Grid.Row="10"
            Margin="0,10"
            Content="立即开始监控"
            IsChecked="{Binding IsMonitored}" />

        <!--  按钮  -->
        <StackPanel
            Grid.Row="12"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Command="{Binding ConfirmCommand}"
                Content="确定"
                IsDefault="True"
                IsEnabled="{Binding IsValid}" />
            <Button
                Width="80"
                Content="取消"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
